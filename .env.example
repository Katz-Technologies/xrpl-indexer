# Service settings
# HTTP API service
SERVER_HOST="localhost"
SERVER_PORT="3000"

# Valid LOG_LEVEL values: trace, debug, info, warn, error, fatal, panic, disabled
LOG_LEVEL="trace"

# Valid LOG_TYPE values: json, text
LOG_TYPE="text"

# XRPL protocol (compatible) server settings
XRPL_WEBSOCKET_URL="wss://s1.ripple.com"
XRPL_WEBSOCKET_FULLHISTORY_URL="wss://s2.ripple.com"

# Kafka settings
KAFKA_BOOTSTRAP_SERVER="localhost:9092"
KAFKA_GROUP_ID="platform.local"
KAFKA_TOPIC_NAMESPACE="xrpl-platform"
KAFKA_WRITER_BATCH_SIZE=1000
KAFKA_WRITER_BATCH_BYTES=4194304
KAFKA_WRITER_BATCH_TIMEOUT_MS=100
KAFKA_WRITER_REQUIRED_ACKS=1

# Elasticsearch settings
ELASTICSEARCH_NAMESPACE="platform.xrpl"
ELASTICSEARCH_URL="http://localhost:9200"
ELASTICSEARCH_USERNAME="elastic"
ELASTICSEARCH_PASSWORD="password"
ELASTICSEARCH_FINGERPRINT=""
ELASTICSEARCH_FLUSH_INTERVAL=5

# docker-compose settings
ZOOKEEPER_VERSION=7.5.0
ZOOKEEPER_MEMORY_LIMIT=1G
KAFKA_VERSION=7.5.0
KAFKA_PORT=9092
KAFKA_BROKER_MEMORY_LIMIT=8G

# File Logging Configuration
LOG_FILE_ENABLED=true
LOG_FILE_PATH=logs/platform.log
LOG_FILE_MAX_SIZE_MB=100
LOG_FILE_MAX_BACKUPS=3
LOG_FILE_MAX_AGE_DAYS=7